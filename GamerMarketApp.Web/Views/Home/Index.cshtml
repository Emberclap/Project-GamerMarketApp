@using GamerMarketApp.Web.ViewModels.Item;
@model IEnumerable<ItemPreviewViewModel>
@{
    ViewData["Title"] = "Welcome to GMarket";
}

<div class="jumbotron text-center bg-dark py-5">
    <h1 class="display-4">Welcome to GMarket</h1>
    <p class="lead">Buy, Sell, and Explore the Best Gaming Items, at the Best Prices.</p>
    <a class="btn btn-primary btn-lg" asp-controller="Item" asp-action="index">Browse Items</a>
    <a class="btn btn-outline-light btn-lg" asp-area="" asp-controller="Item" asp-action="Add">Sell Your Items</a>
</div>

<div class="container mt-5">
    <h2 class="text-center mb-4">Featured Items</h2>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm h-100">
                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.Name">
                    <div class="card-body  d-flex flex-column ">
                        <div class="mt-auto row">
                        <h3 class="card-title text-success">@item.Name</h3>
                        <p class="card-text">@item.Description?.Substring(0, Math.Min(item.Description.Length, 65))...</p>
                        </div>
                        <div class="mt-auto row">
                            <p class="text-muted">€@item.Price</p>
                            <form method="post" class="col-12 mt-auto px-1">
                                <input type="hidden" name="itemId" asp-for="@item.ItemId" />
                                <a asp-controller="Item" asp-action="Details" asp-route-id="@item.ItemId" class="btn btn-outline-info w-100 mb-2">Details</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<div class="bg-light-subtle py-5">
    <div class="container">
        <h2 class="text-center text-dark mb-4">Explore Categories</h2>
        <div class="row justify-content-between text-center">
            @*  <div class="col-md-3">
            <a class="page-link text-dark" asp-area="" asp-controller="Item" asp-action="Index">
            <h5>Consoles</h5>
            </a>
            </div> *@
            <div class="col-md-3">
                <a class="page-link text-dark" asp-area="" asp-controller="Item" asp-action="Index">
                    <h5>Items</h5>
                </a>
            </div>
            <div class="col-md-3">
                <a class="page-link text-dark" asp-area="" asp-controller="Game" asp-action="Index">
                    <h5>Games</h5>
                </a>
            </div>
            <div class="col-md-3">
                <a class="page-link text-dark" asp-area="" asp-controller="" asp-action="Index">
                    <h5>Crafted Items</h5>
                </a>
            </div>
        </div>
    </div>
</div>

<div class="container my-5">
    <h2 class="text-center mb-4">Why Choose Us?</h2>
    <div class="row">
        <div class="col-md-4 text-center">
            <i class="bi bi-currency-dollar display-4 text-primary"></i>
            <h5 class="mt-3">Best Deals</h5>
            <p>Get the best prices for top-quality gaming items.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-shield-check display-4 text-success"></i>
            <h5 class="mt-3">Secure Transactions</h5>
            <p>Safe and reliable payment methods to protect your transactions.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-people display-4 text-warning"></i>
            <h5 class="mt-3">Community Support</h5>
            <p>Join a thriving community of gamers and traders.</p>
        </div>
    </div>
</div>
