@using GamerMarketApp.Web.ViewModels.Item;
@model IEnumerable<ItemPreviewViewModel>
@{
    ViewBag.Title = "Items";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="text-center row">
    @foreach (var e in Model)
    {
        <div class="card text-dark  col-4">
            @if (!string.IsNullOrEmpty(e.ImageUrl))
            {
                <img src="@e.ImageUrl" class="card-img-overlay img-fluid" style="height: 200px; object-fit: cover;">
            }
            else
            {
                <img src="~/img/NoImage.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Placeholder Image">
            }
            <div class="card-body d-flex flex-column">
                <div class="row">
                    <div class="col">
                        <div class="title-wrapper" style="height: 6em; overflow: hidden;">
                            <h3 class="card-title mt-1">@e.Name</h3>
                        </div>
                    </div>
                </div>
                <hr />
                <h5 class="card-title mt-1">@e.SubTypeId</h5>
                <p class="card-text">@e.Description</p>
            </div>
        </div>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}