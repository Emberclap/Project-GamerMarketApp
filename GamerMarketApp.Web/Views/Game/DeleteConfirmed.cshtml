@using GamerMarketApp.Web.ViewModels.Game;
@model GameConfirmDeleteViewModel
@{
    ViewBag.Title = "Confirm Delete";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="card-body text-center">
                    <h3 class="card-title text-center">@Model.Title</h3>
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;">
                    }
                    else
                    {
                        <img src="~/img/NoImage.jpg" class="card-img-top img-fluid" style="height: 200px; object-fit: cover;" alt="Placeholder Image">
                    }
                    <p class="text-danger mt-3">Are you sure you want to delete @Model.Title?</p>
                </div>
                <div class="card-footer">
                    <div class="row mt-auto">
                        <div class="col-6 px-1">
                            <button asp-controller="Game" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" type="submit" class="btn btn-danger w-100 mb-2">DELETE</button>
                        </div>
                        <div class="col-6 px-1">
                            <a asp-controller="Game" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary w-100 mb-2">Cancel</a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>